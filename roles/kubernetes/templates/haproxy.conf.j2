frontend kubernetes
    bind *:443
    option tcplog
    mode tcp
    default_backend kubernetes-master-nodes

frontend kubernetes_https
    bind *:6443
    option tcplog
    mode tcp
    default_backend kubernetes-master-nodes

backend kubernetes-master-nodes
    mode tcp
    balance roundrobin
    option tcp-check
    {%- for node in master %}
    server {{ master.hostname }} {{ master.ip }}:6443 check fall 3 rise 2
    {% endfor %}